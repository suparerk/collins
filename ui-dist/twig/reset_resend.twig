{% extends "./layouts/blank.twig" %}

{% block title %}
    <title>Login</title>
{% endblock %}
{% block assets %}
	{{ parent() }}
{% endblock %}

{% block main %}
    <div class="loginpage reset-password-page bg-gray" id="particles-js">
        <div class="loginpage__wrap loginpage__wrap--bg-2">
            <div class="reset-password-page__header pt-3">
                <div class="row w-100 m-0 p-3 justify-content-between align-items-center">
                    <div class="col-auto">
                        <div class="logo mb-2 mb-md-2">
                            <img src="./img/logo/logo_2.png" />
                        </div>
                    </div>
                    <div class="col-auto">
                        <a href="login.html" class="purple"><i class="icon icon-arrow_small_left"></i>  Back to Login</a>
                    </div>
                </div>
            </div>
            <div class="container d-flex h-100">
                <div class="row w-100 m-0 justify-content-center align-items-center">
                    <div class="col-12 col-md-6 col-lg-5 pb-5 pb-md-0">
                        <h1 class="gray-1 mb-4">Please Check <br />Your E-mail</h1>
                        <p class="mb-0 font-light">And Click on the link in the email <br />we've just sent you to reset new password.</p>
                    </div>
                    <div class="col-12 col-md-6 col-lg-5">
                        <div class="box">
                            <form id="loginForm" class="col-12 p-0 needs-validation" novalidate="" action="/reset_password.html">
                                <p class="gray-2 font-light mb-2 pt-4 pb-4 text-center">
                                    If you donâ€™t receive our the e-mail, check junk mail folder or click resend link.
                                </p>
                                <div class="row mt-4 justify-content-center">
                                    <div class="col-12 col-md-6">
                                        <button id="btnSubmit" type="submit" class="btn w-100">Resend Link</button>
                                    </div>
                                </div>
                            </form>
                        </div><!-- .box -->
                    </div>
                </div>
            </div>
        </div><!-- .loginpage__wrap -->
    </div>
    
{% endblock main %}

{% block scripts %}
    {{ parent() }}
    <script src="./js/particles.js"></script>
    <script src="./js/particles_json_2.js"></script>
{% endblock %}

